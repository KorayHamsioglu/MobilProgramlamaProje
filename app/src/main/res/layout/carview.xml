<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff6d0"
    app:cardCornerRadius="50dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/textViewAniAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dancingscript"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        android:text="TextView" />

    <Button
        android:backgroundTint="#800022"
        android:id="@+id/buttonDelete"

        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_baseline_delete_24" />

    <Button
        android:backgroundTint="#2d7121"
        android:id="@+id/buttonGuncelle"

        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_baseline_create_24" />

    <Button
        android:backgroundTint="#6082B6	"
        android:id="@+id/buttonSend"

        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_baseline_send_24" />
</androidx.cardview.widget.CardView>